{{ use('frontend/widgets/Sbreadcrumbs') }}

<section class="section_crumds">
    <div class="container">
        {{ Sbreadcrumbs_widget({'links' : breadcrumbs}) }}
    </div>
</section>
    
<section class="section_lots">
    <div class="container">
        <header class="section__header section__header_catalog">
            <h2>{{ post.info.title | raw }}</h2>
        </header>
        <div class="row">
            <div class="col-lg-3 col-lg-push-9 col-md-3 col-md-push-9 col-sm-4 col-sm-push-8 col-xs-12">
                <div class="row">
                    <div class="col-sm-12 hidden-xs">
                        <img src="/img/banner1.jpg" alt="" class="img-responsive bananer">
                    </div>
                    <div class="col-sm-12 hidden-xs">
                        <img src="/img/banner2.jpg" alt="" class="img-responsive bananer">
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-lg-pull-3 col-md-9 col-md-pull-3 col-sm-8 col-sm-pull-4 col-xs-12">
                <article class="article_blog lot_active">
                    <div class="article__heading article__heading_about">{{ post.info.title | raw }}</div>
                   <hr>
                    <p class="paragraph__blog">{{ post.info.text | raw }}</p>
                </article>
            </div>
        </div>
    </div>
</section>