{{ use('frontend/widgets/SLinkPager') }}

<div class="container">
    <nav class="breadcrumbs"><a class="breadcrumbs__item" href="">Главная</a><a class="breadcrumbs__item is--current" href="">Новости</a>
    </nav>
</div>
<section class="section section--catalog">
    <div class="container">
        <h2 class="section__title is--align-left">Новости</h2>
        <div class="section__content">
            <div class="row">
                {% for post in posts %}
                <div class="col col--6-of-12 col--s-12-of-12 col--m-6-of-12 col--l-6-of-12">
                    <article class="news">
                        <div class="news__inner"><a class="news__photo" href="{{ post.url }}"><img src="{{ post.simg }}" alt="{{ post.info.title }}"></a>
                            <div class="news__date">{{ post.custom_date }}</div>
                            <h3 class="news__title"><a href="{{ post.url }}">{{ post.info.title }}</a></h3>
                        </div>
                        <hr class="news__divider">
                    </article>
                </div>
                {% endfor %}

            </div>
        </div>
        <div class="section__action">

            {{ s_link_pager_widget({
                'pagination' : pages,
                'maxButtonCount' : 5,
                'options' : {
                    'class' : 'pagination',
                },
                'linkOptions' : {
                    'class' : '',
                },
            }) }}</div>
    </div>
</section>