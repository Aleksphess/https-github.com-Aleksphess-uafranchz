{{ use('frontend/widgets/SLinkPager') }}

<div class="container">
    <nav class="breadcrumbs"><a class="breadcrumbs__item" href="">Главная</a><a class="breadcrumbs__item is--current" href="">Третейский суд</a>
    </nav>
</div>
<section class="section section--articles">
    <div class="container">
        <h2 class="section__title is--align-left">Третейский суд</h2>
        <div class="section__content">
            {% for post in posts %}
            <article class="article">
                <div class="article__inner">
                    <div class="article__photo"><img src="{{ post.bimg }}" alt="{{ post.info.title }}"></div>
                    <div class="article__content">
                        <h3 class="article__title"><a href="{{ post.url }}">{{ post.info.title }}</a></h3>
                        <p class="article__text">{{ post.info.short_description }}</p>
                    </div>
                </div>
            </article>
            {% endfor %}
        </div>
        <div class="section__action">

            {{ s_link_pager_widget({
                'pagination' : pages,
                'maxButtonCount' : 5,
                'options' : {
                    'class' : 'pagination',
                },
                'linkOptions' : {
                    'class' : '',
                },
            }) }}</div>
    </div>
</section>