{{ use('frontend/widgets/NewsWidget') }}
{{ use('frontend/widgets/Advantages') }}
<section class="section section--slider">
    <div class="slider">
        <div class="slider__inner js-slider">
            {% for slide in slids %}
            <div class="slider__item  "><img class="slider__photo" src="{{ slide.bimg }}" alt="">
                <div class="slider__content">
                    <div class="container is--relative is--table">
                        <div class="slider__content-inner">
                            <div class="slider__content-brand"><img src="{{ slide.logos }}" alt=""></div>
                            <div class="slider__content-text">{{ slide.info.title }}</div><a class="slider__content-action" href="{{ slide.href }}">Посмотреть</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <button class="slider__control slider__control--prev js-slider-prev"><i class="icon-arrow-left"></i></button>
        <button class="slider__control slider__control--next js-slider-next"><i class="icon-arrow-right"></i></button>
    </div>
</section>
<section class="section section--popular">
    <div class="container">
        <h2 class="section__title">{{ this.params.popular_franchise }}</h2>
        <div class="section__content">
            <div class="row">
                {% for lot in lots %}
                    <div class="col col--4-of-12 col--s-12-of-12 col--m-6-of-12 col--l-4-of-12">
                        <article class="franch">
                            <div class="franch__inner">
                                <div class="franch__photo"><img src="{{ lot.simg }}" alt="{{ lot.name }}"></div>
                                <div class="franch__details">

                                    <h3 class="franch__title"> <a href="{{ lot.url }}">{{ lot.name }}</a></h3>
                                    <div class="franch__row">
                                        <div class="franch__investments"><i class="icon-money"></i><span><span>{{ this.params.invest }}</span>{{ lot.invest_min }}</span></div>
                                        <div class="franch__payback"><i class="icon-calendar"></i><span><span>{{ this.params.occupation }}</span>{{ lot.occupation_min }}</span></div>
                                    </div>
                                    <div class="franch__row">
                                        <div class="franch__views"><i class="icon-view"></i>{{ lot.views_count }} {{ this.params.visitors }}</div>
                                        <div class="franch__action"><a class="btn" href="{{ lot.url }}">{{ this.params.vieww }}</a></div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="section__action is--centered"><a class="btn btn--primary btn--md" href="{{ Url.to('/category') }}">{{ this.params.all }} {{ this.params.popular_franchise }}</a></div>
    </div>
</section>
